<% layout('layouts/boilerplate') -%>

    <hr>
    <h2>New User</h2>
    <hr>
    <form action="/users/newUser" method="POST">
        <div class="container smallerWidth">
            <label class="form-label" for="firstName">First Name</label>
            <input class="form-control" type="text" id="firstName" name="firstName" required>
            <label class="form-label" for="lastName">Last Name</label>
            <input class="form-control" type="text" id="lastName" name="lastName" required>
            <label class="form-label" for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required>
            <label class="form-label" for="password">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
        </div>
        <div class="d-inline-block mt-3 me-3">
            <label class="form-check-label" for="isNurse">Nurse?</label>
            <input class="form-check-input" type="checkbox" id="isNurse" name="isNurse" value="true">
        </div>
        <div class="d-inline-block mt-3 ms-3">
            <label class="form-check-label" for="isAdmin">Admin?</label>
            <input class="form-check-input" type="checkbox" id="isAdmin" name="isAdmin" value="true">
        </div>
        <div class="d-block mt-4">
        <a class="btn btn-secondary" href="/users/userIndex">Cancel</a>
        <button class="btn btn-info" type="submit">Confirm</button>
    </div>
    </form>